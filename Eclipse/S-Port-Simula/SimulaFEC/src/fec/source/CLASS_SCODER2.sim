%+T	           STRC3("SCODER2",sourceline,"   ATTR",ED_TTAG(RTS_claPtp_cntInr) & "  " & ED_TTAG(tag_paddr) & "  C-PADDR  " & ED_TAG(q.ftag+isorank(q.descr.inrtag))); 
               outtag(q.ftag+isorank(q.descr.inrtag));
            end else begin
%+T	           STRC3("SCODER2",sourceline,"   ATTR",ED_TTAG(RTS_claPtp_cntInr) & "  " & ED_TTAG(tag_paddr) & "  C-PADDR  " & ED_TAG(getINRtag(q))); 
