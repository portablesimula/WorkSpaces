            end;
            if q.descr.stmtag <> NUL then begin
%+T	           STRC3("SCODER2",sourceline,"   ATTR",ED_TTAG(RTS_claPtp_stm) & "  " & ED_TTAG(tag_paddr) & "  C-PADDR  " & ED_TAG(q.ftag+isorank(q.descr.stmtag))); 
               outtext( s_attr    & RTS_claPtp_stm & tag_paddr & s_c_paddr     );
               outtag(q.ftag+isorank(q.descr.stmtag));
            end else begin
%+T	           STRC3("SCODER2",sourceline,"   ATTR",ED_TTAG(RTS_claPtp_stm) & "  " & ED_TTAG(tag_paddr) & "  NOWHERE"); 
               outtext( s_attr    & RTS_claPtp_stm & tag_paddr & s_nowhere );
