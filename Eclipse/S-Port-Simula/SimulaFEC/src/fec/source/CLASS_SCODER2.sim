			end;
			   
%+T	        STRC3("SCODER2",sourceline,"   ATTR",ED_TTAG(RTS_claPtp_prefix) & "  " & ED_TTAG(tag_oaddr) & "  -- List on following lines"); 
            outtext( s_attr & RTS_claPtp_prefix & tag_oaddr  );

